generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  INSTRUCTOR
  SYSTEM_ADMIN
  INSTITUTE_ADMIN
}

model Institute {
  id              String   @id @default(uuid())
  name            String
  code            String   @unique
  domain          String?
  subscriptionPlan String? @map("subscription_plan")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  members InstituteMember[]

  @@map("institutes")
}

model Profile {
  userId        String   @id @map("user_id") // Matches Auth Service User ID
  firstName     String   @map("first_name")
  lastName      String   @map("last_name")
  avatarUrl     String?  @map("avatar_url")
  phoneNumber   String?  @map("phone_number")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  memberDetails InstituteMember[]
  student       Student?
  instructor    Instructor?

  @@map("profiles")
}

model InstituteMember {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  instituteId String   @map("institute_id")
  role        Role

  profile   Profile   @relation(fields: [userId], references: [userId])
  institute Institute @relation(fields: [instituteId], references: [id])

  @@map("institute_members")
  @@unique([userId, instituteId])
}

model Student {
  userId           String @id @map("user_id")
  enrollmentNumber String @map("enrollment_number")
  gradeLevel       String? @map("grade_level")

  profile Profile @relation(fields: [userId], references: [userId])

  @@map("students")
}

model Instructor {
  userId         String @id @map("user_id")
  specialization String?
  designation    String?

  profile Profile @relation(fields: [userId], references: [userId])

  @@map("instructors")
}
